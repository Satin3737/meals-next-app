{
    "$schema": "https://json.schemastore.org/prettierrc",
    "semi": true,
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 110,
    "trailingComma": "none",
    "bracketSpacing": false,
    "arrowParens": "avoid",
    "importOrder": ["^components/(.*)$", "^[./]"],
    "importOrderSortSpecifiers": true,
    "plugins": ["@trivago/prettier-plugin-sort-imports"]
}